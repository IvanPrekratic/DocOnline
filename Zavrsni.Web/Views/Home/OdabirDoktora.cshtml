@using Zavrsni.Model
@model List<Doktor>
@{
    ViewBag.Title = "Odabir doktora";
    Pacijent pacijent = ViewBag.Pacijent;
}

<h2>Odaberi željenog doktora</h2>
<hr />

<table style="margin-top: 20px;" class="table table-condensed">
    <thead>
        <tr>
            <th>Ime i prezime</th>
            <th>Specijalizacija</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Grad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doktor in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Home" asp-action="AboutDoktor" asp-route-id="@doktor.DoktorID">@doktor.ImePrezime</a>
                </td>
                <td>@doktor.Specijalizacija.Naziv</td>
                <td>@doktor.Email</td>
                <td>@doktor.Telefon</td>
                <td>@doktor.Grad</td>

                @{
                    if (pacijent.Doktori.Contains(doktor))
                    {
                        <td class="text-success">Upisan</td>
                    }
                    else
                    {
                        <td>
                            <a asp-controller="Home" asp-action="DodajDoktora" asp-route-id="@doktor.DoktorID">Odaberi doktora</a>
                        </td>

                    }
                }


            </tr>
        }
    </tbody>
</table>

