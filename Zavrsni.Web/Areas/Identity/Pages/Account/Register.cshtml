@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Ime" class="form-control" autocomplete="name" aria-required="true" placeholder="name" />
                <label asp-for="Input.Ime">Ime</label>
                <span asp-validation-for="Input.Ime" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Prezime" class="form-control" autocomplete="name" aria-required="true" placeholder="name" />
                <label asp-for="Input.Prezime">Prezime</label>
                <span asp-validation-for="Input.Prezime" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.KorisnickoIme" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                <label asp-for="Input.KorisnickoIme">Korisničko ime</label>
                <span asp-validation-for="Input.KorisnickoIme" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.JMBG" class="form-control" autocomplete="jmbg" aria-required="true" placeholder="name" />
                <label asp-for="Input.JMBG">JMBG</label>
                <span asp-validation-for="Input.JMBG" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>  
            @{
                var pattern = System.Threading.Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower();
                pattern = pattern.Replace("DD", "D").Replace("D", "DD");
                pattern = pattern.Replace("MM", "M").Replace("M", "MM");
            }
            <div class="form-floating mb-3">
                
                <div class="form-floating mb-3 input-group date" data-provide="datepicker"
                     data-date-format="@pattern">
                    <input asp-for="Input.DatumRodjenja" type="text" class="form-control datepicker" id="date" autocomplete="dateofbirth" aria-required="true" placeholder="dateofbirth">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
                <label asp-for="Input.DatumRodjenja">Datum rođenja</label>
                <span asp-validation-for="Input.DatumRodjenja" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Adresa" class="form-control" autocomplete="street-address" aria-required="true" placeholder="address" />
                <label asp-for="Input.Adresa">Adresa</label>
                <span asp-validation-for="Input.Adresa" class="text-danger"></span>    
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Grad" class="form-control" autocomplete="address-level2" aria-required="true" placeholder="city" />
                <label asp-for="Input.Grad">Grad</label>
                <span asp-validation-for="Input.Grad" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Drzava" class="form-control" autocomplete="country" aria-required="true" placeholder="country" />
                <label asp-for="Input.Drzava">Država</label>
                <span asp-validation-for="Input.Drzava" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Telefon" class="form-control" autocomplete="tel" aria-required="true" placeholder="phone" />
                <label asp-for="Input.Telefon">Telefon</label>
                <span asp-validation-for="Input.Telefon" class="text-danger"></span>
            </div>            
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to register.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
